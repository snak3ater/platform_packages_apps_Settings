<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/status_bar_title" >

    <PreferenceCategory
        android:key="status_bar_general_category"
        android:title="@string/status_bar_general_category" >

    <ListPreference
        android:key="status_bar_battery_style"
        android:title="@string/status_bar_battery_style_title"
        android:dialogTitle="@string/status_bar_battery_style_title"
        android:entries="@array/status_bar_battery_style_entries"
        android:entryValues="@array/status_bar_battery_style_values" />

    <ListPreference
        android:key="status_bar_show_battery_percent"
        android:title="@string/status_bar_battery_percentage_title"
        android:dialogTitle="@string/status_bar_battery_percentage_dialog_title"
        android:entries="@array/status_bar_battery_percentage_entries"
        android:entryValues="@array/status_bar_battery_percentage_values" />

    <ListPreference
        android:key="quick_pulldown"
        android:title="@string/title_quick_pulldown"
        android:entries="@array/quick_pulldown_entries"
        android:entryValues="@array/quick_pulldown_values"
        android:persistent="false" />
  
    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="status_bar_brightness_control"
        android:title="@string/status_bar_toggle_brightness"
        android:summary="@string/status_bar_toggle_brightness_summary"
        android:defaultValue="false" />

    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="qs_show_brightness_slider"
        android:title="@string/qs_brightness_slider_title"
        android:summary="@string/qs_brightness_slider_summary"
        android:defaultValue="true"/>

    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="status_bar_notif_count"
        android:title="@string/status_bar_notif_count_title"
        android:summary="@string/status_bar_notif_count_summary"
        android:defaultValue="false" />

    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="double_tap_sleep_gesture"
        android:summary="@string/status_bar_double_tap_to_sleep_summary"
        android:title="@string/status_bar_double_tap_to_sleep_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/qs_category_title">

    <PreferenceScreen
        android:key="qs_order"
        android:title="@string/qs_order_title"
        android:fragment="com.android.settings.cyanogenmod.qs.QSTiles" />

    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="sysui_qs_main_tiles"
        android:title="@string/qs_main_tiles_title"
        android:summaryOn="@string/qs_main_tiles_summary_on"
        android:summaryOff="@string/qs_main_tiles_summary_off"
        android:defaultValue="true" />

    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="qs_location_advanced"
        android:title="@string/qs_advanced_location_title"
        android:summary="@string/qs_advanced_location_summary"
        android:defaultValue="false" />

    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="quick_settings_vibrate"
        android:title="@string/quick_settings_vibrate_title"
        android:summary="@string/quick_settings_vibrate_summary"
        android:defaultValue="false"/>

    </PreferenceCategory>

    <PreferenceScreen
        android:fragment="com.android.settings.simpleaosp.StatusBarClockStyle"
        android:key="clock_style_pref"
	android:summary="@string/status_bar_clock_summary"
        android:title="@string/status_bar_clock" />
   
    <PreferenceScreen
	android:key="network_traffic_state"
	android:fragment="com.android.settings.simpleaosp.NetworkTraffic"
 	android:summary="@string/network_traffic_summary"
	android:title="@string/network_traffic_title" />

    <PreferenceScreen
        android:fragment="com.android.settings.simpleaosp.StatusBarWeather"
        android:key="status_bar_weather"
        android:title="@string/weather_clock_title" 
	android:summary="@string/weather_clock_summary" />
</PreferenceScreen>
